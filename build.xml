<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Transliterate">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="G:/Programs/Transliterator.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Main-Class" value="org.dattapeetham.transliteration.ui.Transliterator"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="G:/Documents/Projects/Transliteration"/>
            <zipfileset excludes="META-INF/*.SF" src="G:/Documents/Projects/Transliteration/lib/icu4j-4_0_1.jar"/>
        </jar>
    </target>
</project>
